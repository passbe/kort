<% content_for :title, t("heading.update_model", name: Interval.model_name.human) %>
<%= render HeaderComponent.new(
  title: I18n.t("heading.update_model", name: Interval.model_name.human)
) do %>
  <div class="lg:basis-1/2">
    <%= render BreadcrumbsComponent.new([
      [t("home"), root_path],
      [Interval.model_name.human.pluralize, intervals_path],
      [@interval.name, interval_path(@interval)],
      t("heading.update_model", name: Interval.model_name.human)
    ]) %>
  </div>
  <div class="lg:basis-1/2 flex flex-row space-x-4 items-center justify-end">
    <%= link_to t("button.back"), interval_path(@interval) %>
  </div>
<% end %>
<main class="flex-1 flex flex-col px-3 pt-3 pb-6 space-y-6 lg:px-6 lg:pt-6 lg:pb-12 lg:space-y-12">
  <%= render IntervalFormComponent.new(interval: @interval) do |component| %>
    <% component.with_actions do %>
      <%= button_tag t("button.update") %>
      <%= link_to t("button.cancel"), interval_path(@interval) %>
    <% end %>
  <% end %>
</main>
