<%= turbo_frame_tag "modal" do %>
  <%= render ModalComponent.new(
    title: t("heading.confirm_destroy", name: Probe.model_name.human),
    description: t("destroy", name: @probe.name, model: Probe.model_name.human.downcase).html_safe
  ) do |component| %>
    <% component.with_actions do %>
      <%= link_to t("button.delete"), probe_path(@probe), class: "text-red-300! hover:text-red-400!", data: { "turbo-method": "delete", "turbo-frame": "_top" }  %>
    <% end %>
  <% end %>
<% end %>
