<% content_for :title, t("heading.create_model", name: Probe.model_name.human) %>
<%= render HeaderComponent.new(
  title: I18n.t("heading.create_model", name: Probe.model_name.human)
) do %>
  <div class="lg:basis-1/2">
    <%= render BreadcrumbsComponent.new([
      [t("home"), root_path],
      [Probe.model_name.human.pluralize, probes_path],
      t("heading.create_model", name: Probe.model_name.human)
    ]) %>
  </div>
  <div class="lg:basis-1/2 flex flex-row space-x-4 items-center justify-end">
    <%= link_to t("button.back"), probes_path %>
  </div>
<% end %>
<main class="flex-1 flex flex-col px-3 pt-3 pb-6 space-y-6 lg:px-6 lg:pt-6 lg:pb-12 lg:space-y-12">
  <%= render ProbeFormComponent.new(probe: @probe) do |component| %>
    <% component.with_actions do %>
      <%= button_tag t("button.create") %>
      <%= link_to t("button.cancel"), probes_path %>
    <% end %>
  <% end %>
</main>
