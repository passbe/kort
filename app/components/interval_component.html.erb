<tr class="text-gray-300 hover:bg-neutral-500/40">
  <td class="text-left">
    <%= link_to interval_path(@interval), class: status_css do %>
      <%= @interval.enabled ? t("status.enabled") : t("status.disabled") %>
    <% end %>
  </td>
  <td class="text-left">
    <%= link_to interval_path(@interval), class: link_css do %>
      <span class="text-gray-200"><%= @interval.name %></span>
    <% end %>
  </td>
  <td class="text-center">
    <%= link_to interval_path(@interval), class: link_css do %>
      <%= @interval.tag_list %>
    <% end %>
  </td>
  <td class="text-center">
    <%= link_to interval_path(@interval), class: link_css do %>
      <%= @interval.schedules_count %>
    <% end %>
  </td>
