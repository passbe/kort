<div class="flex flex-row space-x-2 items-center">
  <% @crumbs.each_with_index do |item, index| %>
    <% if index > 0 %>
      <span>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-gray-400 mt-1">
        <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
      </svg>
      </span>
    <% end %>
    <% if item.is_a?(Array) %>
      <%= link_to item.first, item.last %>
    <% else %>
      <span><%= item %></span>
    <% end %>
  <% end %>
</div>
